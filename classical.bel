% Classical logic using Peirce's law

LF o : type =  % formulas
  | ⊃ : o → o → o
  | ⊤ : o
  | ∧   : o → o → o
  | ∨   : o → o → o
  | ¬  : o → o
  | ∀  : (i → o) → o
  | ∃  : (i → o) → o
;


